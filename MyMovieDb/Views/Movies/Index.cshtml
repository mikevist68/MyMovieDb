@model IEnumerable<Movies>

<h2>Movies</h2>

 <div style="display: block">
     <a href="/Movies/InsertMovie/">Create a New Movie</a>
 </div>



<table class="table">
    <tr>
        <th>movie_id</th>
        <th>title</th>
        <th>genre</th>
        <th>release_year</th>
        <th>director</th>
    </tr>

    @foreach (var movie in @Model)
    {
        <tr>
            <td><a href=/Movies/ViewMovie/@movie.movie_id>@movie.movie_id</a></td>
            <td>@movie.title</td>
            <td>@movie.genre</td>
            <td>@movie.release_year</td>
            <td>@movie.director</td>
        </tr>
    }

</table>